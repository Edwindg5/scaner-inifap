{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/procesar-pdf",
      "dest": "/api/main.py"
    },
    {
      "src": "/api/descargar-excel", 
      "dest": "/api/main.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/front/$1"
    }
  ],
  "functions": {
    "api/main.py": {
      "maxDuration": 30
    }
  }
}