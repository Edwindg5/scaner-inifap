{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.9" }
    },
    {
      "src": "front/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/api/procesar-pdf", 
      "dest": "api/main.py",
      "methods": ["POST"]
    },
    { 
      "src": "/api/descargar-excel", 
      "dest": "api/main.py",
      "methods": ["POST"]
    },
    { 
      "src": "/api/(.*)", 
      "dest": "api/main.py" 
    },
    { 
      "src": "/(.*)", 
      "dest": "front/$1" 
    }
  ]
}